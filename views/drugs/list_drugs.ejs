<!-- This is the page for listing the drugs -->
<div class="scrollable" style="background-color: #dafbff; height: 100vh;">
    <form method="GET">
        <div class="boxContainer">
            <table class="elementsContainer">
                <tr>
                    <td>
                        <input type="text" placeholder="Search" class="search" name="name">
                    </td>
                    <td>
                        <button class="btn-3 btn-trans" type="submit">Search</button>
                    </td>
                </tr>
            </table>
        </div>
        
        <% if(drugs_List.length == 0){ %>
            <h1 style="text-align: center; align-items: center; position: absolute; top: 50vh;left: 5vh;"> We got zero results for your search or there is no drug detail added yet, Try again </h1> <% ; %>
        <% }else{ %>
                <table class="list-drugs list-drug-table">
                    <tr> <th> <h1 class="head-list-drugs">List of Drugs</h1></th> </tr>
                    <div class="drug-names">
                        <% drugs_List.forEach(drugs=> { %>
                            <% let drug_name=drugs.name %>
                            <% let href="/drugs/one_drug/" %>
                            <% href=href.concat(drug_name) %>
                            <tr> <td> <a class="actual-drug" href=" <%= href %>"> <%= drug_name %> </a> </td> </tr>
                        <%})%>
                    </div>
                </table>
            <% ; %>
        <% }; %>
    </form>
</div>